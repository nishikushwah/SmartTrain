<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Color of your action bar -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:endColor="@color/smarttrain__ab_gradient_end"
                android:startColor="@color/smarttrain__ab_gradient_start"
                android:type="linear"
                android:useLevel="false" />
        </shape>
    </item>

    <!-- Bottom Line -->
    <item android:bottom="1dip">
        <shape android:shape="rectangle" >
            <solid android:color="@color/smarttrain__ab_bottom_line" />
        </shape>
    </item>

</layer-list>